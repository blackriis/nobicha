{
  "name": "employee-management-system",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "typecheck": "npm run typecheck --workspace=apps/web",
    "test": "npm run test --workspace=apps/web",
    "test:run": "npm run test:run --workspace=apps/web",
    "test:e2e": "npm run test:e2e --workspace=apps/web",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.2",
    "dotenv": "^17.2.2",
    "next": "15.5.2"
  },
  "devDependencies": {
    "shadcn": "^3.3.0",
    "supabase": "^2.39.2"
  }
}
